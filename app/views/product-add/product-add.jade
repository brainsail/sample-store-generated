div.modal-header
  button.close(ng-click="vm.cancel()") Close
  h3.modal-title Add A Product  
    div.modal-body
      div()
        form.create-form(role="form", ng-submit="vm.addProduct(product)" novalidate)
          div.form-group
            label(for="name") Name Preview: {{vm.product.name}}
            input.form-control(ng-model="vm.product.name")
          div.form-group
            label(for="price") Price Preview: {{vm.product.price}}
            input.form-control(ng-model="vm.product.price")
          div.form-group
            label(for="description") Description Preview: {{vm.product.description}}
            input.form-control(ng-model="vm.product.description")
          div.form-group
            label(for="images") Image Urls
            input.form-control(ng-model="vm.product.images")
          div.input-group
            label(for="canPurchase") Available For Purchase?  Preview: {{vm.product.canPurchase}}
            span.input-group(data-toggle="buttons-radio")
              input(type="radio", ng-value="true", ng-model="vm.product.canPurchase")
              label Yes 
              br
              input(type="radio", ng-value="false", ng-model="vm.product.canPurchase")
              label No 

    div.form-group
      label(for="soldOut")
      input.form-control(ng-model="vm.product.soldOut")
    div.modal-footer
      button.btn.btn-info.btn-lg(type="submit" ng-click="vm.addProduct()") Add Product
      button.btn.btn-default.btn-lg.pull-right(type="button" ng-click="vm.cancel()") Cancel